@model AppVendas.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}
<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Cadastro de Produtos</span>
</div>

<h3>Deseja excluir esse registro?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutoNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QtdeEstoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QtdeEstoque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CadastroAtivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CadastroAtivo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoId" />

        <input type="submit" value="Excluir" class="btn btn-outline-danger mt-3 px-3 py-1 me-3" />

        <a asp-action="Index" class="btn btn-outline-info align-items-center px-3 mt-3 justify-content-center py-1">
            <ion-icon name="arrow-back" class="me-2"></ion-icon>Voltar
        </a>
    </form>
</div>